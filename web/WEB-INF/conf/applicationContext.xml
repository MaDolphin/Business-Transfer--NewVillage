<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

    <bean id="costdao" class="com.NewVillage.daoimpl.CostDaoImp">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <bean id="receiptdao" class="com.NewVillage.daoimpl.ReceiptDaoImp">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <bean id="FinanceAction" class="com.NewVillage.action.FinanceAction">
        <property name="costdao" ref="costdao"></property>
        <property name="receiptdao" ref="receiptdao"></property>
    </bean>


    <!--张松顺-->
    <bean id="traceTableAction" class="com.NewVillage.action.TraceTableAction">
        <property name="traceDao" ref="traceDao"></property>
    </bean>
    <bean id="traceDao" class="com.NewVillage.daoimpl.TraceDaoImp">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>



    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="configLocation" value="/WEB-INF/conf/hibernate.cfg.xml"></property>
        <property name="annotatedClasses">
            <list>
                <value>com.NewVillage.entity.BusinessCostEntity</value>
                <value>com.NewVillage.entity.CheckEntity</value>
                <value>com.NewVillage.entity.CheckInfoEntity</value>
                <value>com.NewVillage.entity.DesignFileCheckEntity</value>
                <value>com.NewVillage.entity.EmployeeEntity</value>
                <value>com.NewVillage.entity.ExaminationEntity</value>
                <value>com.NewVillage.entity.InspectionEntity</value>
                <value>com.NewVillage.entity.InvestigationSiteEntity</value>
                <value>com.NewVillage.entity.InvestigationWorkEntity</value>
                <value>com.NewVillage.entity.JobInfoEntity</value>
                <value>com.NewVillage.entity.LotEntity</value>
                <value>com.NewVillage.entity.NewVillageEntity</value>
                <value>com.NewVillage.entity.PayRecordEntity</value>
                <value>com.NewVillage.entity.PowerDesignEntity</value>
                <value>com.NewVillage.entity.PowerDesignReplyEntity</value>
                <value>com.NewVillage.entity.RefileEntity</value>
                <value>com.NewVillage.entity.TraceTableEntity</value>
                <value>com.NewVillage.entity.UserEntity</value>
                <value>com.NewVillage.entity.MessageEntity</value>
                <value>com.NewVillage.entity.ProcessRecordEntity</value>
                <value>com.NewVillage.entity.Message</value>
                <value>com.NewVillage.entity.ProcessRecord</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.connection.url">jdbc:mysql://121.42.197.31:3306/newvil</prop>
                <prop key="hibernate.connection.driver_class">com.mysql.jdbc.Driver</prop>
            </props>
        </property>
    </bean>

    <!-- 配置声明式事务管理（采用注解的方式） -->
    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>

    <tx:advice id="txAdvice" transaction-manager="transactionManager">
        <tx:attributes>
            <tx:method name="add*" propagation="REQUIRED"/>
            <tx:method name="*" read-only="true"/>
        </tx:attributes>
    </tx:advice>

    <aop:config>
        <aop:pointcut id="alladdmethod" expression="execution(* com.NewVillage.dao.*.*(..))"/>
        <aop:advisor advice-ref="txAdvice" pointcut-ref="alladdmethod"/>
    </aop:config>

</beans>